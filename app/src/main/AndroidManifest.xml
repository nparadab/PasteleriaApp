<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.proyecto1.milsabores">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Milsabores">

        <!-- ✅ Login es la pantalla inicial -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Pantalla de recuperación de contraseña (FALTABA) -->
        <activity
            android:name=".view.RecuperarPasswordActivity"
            android:exported="true" />

        <!-- ✅ Pantallas principales por rol -->
        <activity android:name=".view.InicioActivity" android:exported="true" />
        <activity android:name=".view.InicioVendedorActivity" android:exported="true" />

        <!-- ✅ Pantalla del cliente (solo lectura) -->
        <activity android:name=".view.ListaProductosClienteActivity" android:exported="true" />

        <!-- ✅ Actividades secundarias -->
        <activity android:name=".view.FormularioActivity" android:exported="true" />
        <activity android:name=".view.ListaProductosActivity" android:exported="true" />
        <activity android:name=".view.AgregarProductoActivity" android:exported="true" />

        <!-- ✅ Pantallas de APIs externas -->
        <activity android:name=".view.ClimaActivity" android:exported="true" />
        <activity android:name=".view.MealActivity" android:exported="true" />

        <!-- ✅ Pantalla para ver usuarios (solo admin) -->
        <activity android:name=".view.ListaUsuariosActivity" android:exported="true" />

    </application>

</manifest>
