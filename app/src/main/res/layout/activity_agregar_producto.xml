<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastelFondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar nuevo producto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pastelTexto"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textColor="@color/pastelTexto"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Torta de chocolate"
            android:textColor="@color/pastelTexto"
            android:backgroundTint="@color/pastelBoton"
            android:padding="10dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/pastelTexto"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPrecioProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 15990"
            android:inputType="numberDecimal"
            android:textColor="@color/pastelTexto"
            android:backgroundTint="@color/pastelBoton"
            android:padding="10dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textColor="@color/pastelTexto"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/pastelBoton"
            android:popupBackground="@color/pastelFondo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="@color/pastelTexto"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Torta con relleno de frambuesa"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:textColor="@color/pastelTexto"
            android:backgroundTint="@color/pastelBoton"
            android:padding="10dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock disponible"
            android:textColor="@color/pastelTexto"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 10"
            android:inputType="number"
            android:textColor="@color/pastelTexto"
            android:backgroundTint="@color/pastelBoton"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de creación: "
            android:textColor="@color/pastelTexto"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar imagen"
            android:textColor="@color/white"
            android:backgroundTint="@color/pastelBoton"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@color/pastelBoton"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR PRODUCTO"
            android:textColor="@color/white"
            android:backgroundTint="@color/pastelBoton"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnVolverInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOLVER AL INICIO"
            android:textColor="@color/white"
            android:backgroundTint="@color/pastelBoton"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
