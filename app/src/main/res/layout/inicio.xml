<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pastelitos">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Título principal con fuente Lobster -->
        <TextView
            android:id="@+id/tituloPasteleria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastelería Mil Sabores"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/pastelTexto"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Imagen decorativa animada -->
        <ImageView
            android:id="@+id/imgAnimadaInicio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Imagen decorativa animada de productos"
            android:layout_marginBottom="20dp" />

        <!-- Eslogan -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Las tortas más ricas, ahora también online"
            android:textSize="26sp"
            android:textColor="@color/pastelTexto"
            android:fontFamily="@font/lobster"
            android:gravity="center"
            android:layout_marginBottom="36dp" />

        <!-- Botón para ingresar producto -->
        <Button
            android:id="@+id/btnIngresarProducto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ingresar Producto"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_agregar"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/pastelBoton"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- ✅ Botón para ver usuarios (solo ADMIN lo verá) -->
        <Button
            android:id="@+id/btnVerUsuarios"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ver Usuarios"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_ver"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/pastelBoton"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- ✅ Botón para ver productos (visible para todos) -->
        <Button
            android:id="@+id/btnVerProductos"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ver Productos"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_ver"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/pastelBoton"
            android:textColor="@color/white" />

        <!-- Botón para ver clima -->
        <Button
            android:id="@+id/btnClima"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ver Clima"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_ver"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/pastelBoton"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

        <!-- Botón para buscar recetas -->
        <Button
            android:id="@+id/btnRecetas"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Buscar Recetas"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_ver"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/pastelBoton"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</FrameLayout>
