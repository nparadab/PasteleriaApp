<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/pastelFondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageView
        android:id="@+id/logoPasteleria"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_milsabores"
        android:contentDescription="Logo de Pastelería Mil Sabores" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:text="Las tortas más ricas, ahora también online"
        android:textSize="20sp"
        android:textColor="@color/pastelTexto"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnIngresarProducto"
        android:text="Ingresar Producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/pastelBoton"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnVerProductos"
        android:text="Ver Productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pastelBoton"
        android:textColor="@android:color/white" />
</LinearLayout>
